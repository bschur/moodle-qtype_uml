{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "uml-editor": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "ngx-build-plus:build",
          "options": {
            "outputPath": "dist/uml-editor-elements",
            "index": "src/index.html",
            "main": "src/main.elements.ts",
            "singleBundle": true,
            "tsConfig": "tsconfig.elements.json",
            "inlineStyleLanguage": "scss",
            "outputHashing": "none",
            "styles": ["src/styles.scss"],
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets/",
                "output": "/"
              }
            ]
          }
        },
        "build-app": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/uml-editor",
            "index": "src/index.html",
            "browser": "src/main.app.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "styles": ["src/styles.scss"],
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets/",
                "output": "/"
              }
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1mb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "1mb",
                  "maximumError": "2mb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "uml-editor:build-app:production"
            },
            "development": {
              "buildTarget": "uml-editor:build-app:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:jest",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "uml-editor:build-app"
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss",
      "standalone": true,
      "changeDetection": "OnPush",
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "standalone": true,
      "skipTests": true
    },
    "@schematics/angular:pipe": {
      "standalone": true,
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  },
  "cli": {
    "schematicCollections": ["@angular-eslint/schematics"]
  }
}
